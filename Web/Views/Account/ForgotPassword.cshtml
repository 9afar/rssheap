}

@section seo
{
    <title>Forgot password</title>
    <meta name="robots" content="noindex">
    <meta name="robots" content="nofollow" />
}

<section id="content">

    <div class="content-wrap nopadding">

        <div class="section nopadding nomargin"
             style="width: 100%; height: 100%; position: absolute; left: 0; top: 0;
                    background: url('/images/parallax/home/1.jpg') center center no-repeat; background-size: cover;
                    opacity: 0.2; filter: alpha(opacity=20);">
        </div>

        <div class="section nobg full-screen nopadding nomargin">
            <div class="container vertical-middle divcenter clearfix">

                <div class="row center">
                    <a href="/"><img src="/images/logo.png"></a>
                </div>

                <div class="panel panel-default divcenter noradius noborder" style="max-width: 400px; background-color: rgba(255,255,255,0.93);">
                    <div class="panel-body" style="padding: 40px;">

                        <form class="nobottommargin" action="@Request.RawUrl" method="post">


                            @if (TempData["message"] == "ok")
                            {
                                <h5>Check your email</h5>
                                <p>We've sent you an email. Click the link in the email to reset your password.</p>
                                <p>
                                    If you don't see the email, check other places it might be, like your junk, spam, social, or other folders.
                                </p>
                            }
                            else
                            {
                                <h5>Enter your email address and we will send you a link to reset your password!</h5>

                                if (TempData["message"] == "uknownuser")
                                {
                                    <div class="col_full">
                                        <label style="color: red;">
                                            Unknown user
                                        </label>
                                    </div>
                                }

                                <div class="col_full" style="margin-bottom: 10px;">
                                    @*<label for="login-form-username">Email:</label>*@
                                    @*<input type="text" id="login-form-username" name="login-form-username" value="" class="form-control not-dark" />*@
                                    <input required type="text" name="email" id="email" class="form-control not-dark" placeholder="Email">
                                </div>

                                <div class="col_full nobottommargin">
                                    <input type="submit"
                                           style="width: 100%;"
                                           class="button button-3d button-black nomargin"
                                           value="Send Email" />
                                </div>
                            }

                        </form>

                    </div>
                </div>

                <div class="row center dark"><small>Copyrights &copy; All Rights Reserved by rssheap</small></div>

            </div>
        </div>

    </div>

</section><!-- #content end -->
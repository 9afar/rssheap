@{

}

@section seo
{
    <title>Reset password</title>
    <meta name="robots" content="noindex">
    <meta name="robots" content="nofollow" />
}

<section id="content">

    <div class="content-wrap nopadding">

        <div class="section nopadding nomargin"
             style="width: 100%; height: 100%; position: absolute; left: 0; top: 0;
                    background: url('/images/parallax/home/1.jpg') center center no-repeat; background-size: cover;
                    opacity: 0.2; filter: alpha(opacity=20);">
        </div>

        <div class="section nobg full-screen nopadding nomargin">
            <div class="container vertical-middle divcenter clearfix">

                <div class="row center">
                    <a href="/"><img src="/images/logo.png"></a>
                </div>

                <div class="panel panel-default divcenter noradius noborder" style="max-width: 400px; background-color: rgba(255,255,255,0.93);">
                    <div class="panel-body" style="padding: 40px;">

                        @if (TempData["message"] == "ok")
                        {
                            <h3>Success, you have a new password now!</h3>

                            <form class="nobottommargin" action="/login" method="get">
                                <div class="col_full nobottommargin">
                                    <input style="width: 100%;" type="submit" class="button button-3d button-black nomargin" value="Go to login" />
                                </div>
                            </form>
                        }
                        else
                        {
                            <form class="nobottommargin" action="@Request.RawUrl" method="post">
                                <h3>Reset your password</h3>

                                @if (TempData["message"] != null && TempData["message"] != "ok")
                                {
                                    <div class="col_full">
                                        <label style="color: red;">@TempData["message"]</label>
                                    </div>
                                }

                                <div class="col_full" style="margin-bottom: 10px;">
                                    @*<label for="login-form-username">Email:</label>*@
                                    @*<input type="text" id="login-form-username" name="login-form-username" value="" class="form-control not-dark" />*@
                                    <input required class="form-control not-dark" type="password" name="password" placeholder="Type your new password" />
                                </div>

                                <div class="col_full" style="margin-bottom: 10px;">
                                    @*<label for="login-form-password">Password:</label>*@
                                    @*<input type="password" id="login-form-password" name="login-form-password" value="" class="form-control not-dark" />*@
                                    <input required class="form-control not-dark" type="password" name="passwordConfirmed" placeholder="Type your new password one more time" />
                                </div>

                                <div class="col_full nobottommargin">
                                    <input style="width: 100%;" type="submit" class="button button-3d button-black nomargin" value="Reset password" />
                                </div>
                            </form>
                        }

                    </div>
                </div>

                <div class="row center dark"><small>Copyrights &copy; All Rights Reserved by Canvas Inc.</small></div>

            </div>
        </div>

    </div>

</section><!-- #content end -->
@model List<Feed>

@if (Model.Count == 0)
{
    <p>You have not uploaded any feeds yet</p>
    return;
}

<div class="feeds">
    @foreach (var feed in Model)
    {
        <div class="article-post post-block clearfix">

            <div class="vote-box">
                <div class="votes">
                    <div class="number positive">@feed.TotalLikes.FormatCount()</div>
                    <div class="attr">Votes</div>
                </div>
                <div class="views">
                    <div class="number">@feed.TotalViews.FormatCount()</div>
                    <div class="attr">Views</div>
                </div>
                <div class="answ">
                </div>
            </div>

            <!-- title -->
            <div class="title-box">
                <a id="@feed.Id" class="article-title" href="@feed.PrettyUrl">
                    @Html.Raw(feed.Name)
                </a>
                <div style="clear: both"></div>
                <span class="feed-description">@Html.Raw(feed.Description)</span>

            </div>

        </div>
    }
</div>
